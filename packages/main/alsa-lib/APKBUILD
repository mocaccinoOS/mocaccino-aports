# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=alsa-lib
pkgver=1.2.4
pkgrel=1
pkgdesc="Advanced Linux Sound Architecture (ALSA) library"
url="http://www.alsa-project.org"
arch="all"
license="LGPL-2.1-or-later"
subpackages="$pkgname-dev $pkgname-dbg"
makedepends="linux-headers"
source="ftp://ftp.alsa-project.org/pub/lib/alsa-lib-$pkgver.tar.bz2
	remove-test.patch
	fix-dlo.patch"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-python \
		--disable-static \
		--disable-resmgr \
		--enable-rawmidi \
		--enable-seq \
		--enable-aload \
		--disable-dependency-tracking \
		--without-versioned
	make
	rm -rf "$builddir"/include/sound/*
	printf "all:\ncheck:\ninstall:\n" > "$builddir"/include/sound/Makefile
}

check() {
	make check
}

package() {
	make -j1 DESTDIR="$pkgdir" install
}

